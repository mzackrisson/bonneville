---
import { getCollection, getEntry } from "astro:content";

// const titleandtext = await getCollection("titleandtext");
const omforeningen = await getEntry("omforeningenpage", "index");
---

<section class="flex flex-col justify-center mt-10  mb-20 mx-auto gap-16 max-w-6xl pt-14">
  {
    omforeningen.data.titleandtext.map(({ title, text }) => (
        <h2 class="mt-1 text-5xl h-full font-semibold leading-snug tracking-tight">
          {title}
        </h2>
        <h2 class="mt-1 h-full text-xl leading-snug tracking-tight">
          {text}
        </h2>
    ))
  }
</section>
