---
import { getCollection } from "astro:content";

const styrelsen = await getCollection("styrelsen");
---

<section class="flex h-80 flex-wrap justify-center gap-16 pt-14">
  {
    styrelsen.map((styrelsen) => (
      <div class="h-full w-full lg:h-60 lg:w-96">
        <h2 class="mt-1p-6 text-3xl font-semibold leading-snug tracking-tight">
          {styrelsen.data.title}
        </h2>
        <p class="p-6 text-black">{styrelsen.data.text}</p>
      </div>
    ))
  }
</section>
