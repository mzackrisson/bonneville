---
import { Dropdown as DropdownContainer, DropdownItems } from 'astro-navbar'
const { title, lastItem, children } = Astro.props
---

<li class="relative">
  <DropdownContainer class="group">
    <button
      class="relative flex w-full flex-col items-center gap-1 text-gray-800 hover:text-gray-900 lg:w-auto lg:px-3">
      <span>{title}</span>
      <!-- <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="absolute right-0 h-3 w-3 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg> -->
      <div
        class="h-0.5 w-full origin-left scale-0 cursor-pointer bg-black group-hover:scale-100">
      </div>
    </button>
    <DropdownItems>
      <div
        class:list={[
          'z-10 w-full lg:absolute lg:w-48',
          lastItem
            ? 'origin-top-right lg:right-0'
            : 'origin-top-left lg:left-0',
        ]}>
        <div
          class="flex max-w-max flex-col px-3 lg:rounded-md lg:border lg:bg-white lg:py-2 lg:shadow">
          {
            children.map((item) => (
              <a
                href={item.path}
                class="py-1 text-gray-800 hover:text-gray-900">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>
