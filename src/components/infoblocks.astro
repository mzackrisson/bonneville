---
import { getEntry } from "astro:content";

const startpage = await getEntry("startpage", "index");
---

<section
  class="mx-auto mt-8 grid h-full items-center justify-center gap-4 sm:gap-8 md:grid-cols-3 lg:gap-16">
  {
    startpage.data.infoblock.map(({ buttontext, title, url, text }) => (
      <div class="hover:animate-wiggle flex h-full w-full max-w-sm flex-col justify-between rounded-md border border-gray-600 bg-yellow-100 p-4 shadow-xl">
        <div class="text-center">
          <h2 class="text-3xl font-semibold leading-snug tracking-tight text-gray-900">
            {title}
          </h2>
          <p class="mt-4 text-gray-900">{text}</p>
        </div>

        <a
          class="mx-auto mt-4 w-full max-w-64 rounded-md py-2 text-center text-gray-900 hover:font-semibold"
          href={url}>
          {buttontext}
        </a>
      </div>
    ))
  }
</section>
