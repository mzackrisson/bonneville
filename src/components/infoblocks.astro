---
import { getEntry } from "astro:content";

const startpage = await getEntry("startpage", "index");
---

<section
  class="mx-auto mt-8 grid h-full items-center justify-center gap-4 sm:gap-8 md:grid-cols-3 lg:gap-16">
  {
    startpage.data.infoblock.map(({ buttontext, title, url, text }) => (
      <a
        class="flex h-full w-full max-w-sm flex-col justify-between rounded-md border border-gray-600 bg-yellow-100 p-2 shadow-xl hover:animate-wiggle"
        href={url}>
        <div class="text-center">
          <h2 class="text-3xl font-semibold leading-snug tracking-tight text-gray-900">
            {title}
          </h2>
          <p class="mt-4 text-gray-900">{text}</p>
        </div>
        <p class="mt-2 text-center text-gray-900 hover:font-semibold">
          {buttontext}
        </p>
      </a>
    ))
  }
</section>
