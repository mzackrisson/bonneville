---
import { getEntry } from "astro:content";

const startpage = await getEntry("startpage", "index");
---

<section
  class="mx-auto mt-12 grid h-full items-center justify-center gap-4 sm:gap-8 md:grid-cols-3 lg:gap-16">
  {
    startpage.data.infoblock.map(({ buttontext, title, url, text }) => (
      <div class="flex h-full w-full max-w-sm flex-col justify-between border border-stone-200 p-4">
        <div class="text-center">
          <h2 class="text-3xl font-semibold leading-snug tracking-tight">
            {title}
          </h2>
          <p class="mt-4">{text}</p>
        </div>

        <a
          class="mx-auto mt-4 w-full max-w-64 rounded-md bg-stone-200 py-2 text-center text-black hover:bg-stone-300"
          href={url}>
          {buttontext}
        </a>
      </div>
    ))
  }
</section>
