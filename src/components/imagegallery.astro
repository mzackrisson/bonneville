---
import Container from "@components/container.astro";
import { Picture } from "astro:assets";
import Huset from "assets/huset.jpg";
import Huset1 from "assets/huset1.jpg";
import Torget from "assets/torg.jpg";
import Stationen from "assets/stationen.jpg";
---

<Container <div class="row-span-2 grid w-full grid-cols-2 gap-28 pt-28">
  <div class="image">
    <Picture
      src={Huset}
      alt="Apartment building from angle"
      sizes="100vw"
      loading="eager"
      format="avif"
    />
  </div>
  <div class="image">
    <Picture
      src={Stationen}
      alt="Apartment building from front"
      sizes="100vw"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <Picture
      src={Huset1}
      alt="Apartment building from front"
      sizes="100vw"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <Picture
      src={Torget}
      alt="Apartment building from front"
      sizes="100vw"
      loading="eager"
      format="avif"
    />
  </div>
</Container>
/>
<style>
  .larger {
    width: 2000px;
  }
</style>
<script>
  function enlargen(item) {
    item.classList.remove("image");
  }
  document.addEventListener("DOMContentLoaded", () => {
    let items = document.getElementsByClassName("image");
    console.log(items);
    for (let i = 0; i < items.length; i++) {
      items[i].addEventListener("click", enlargen);
    }
  });
</script>
