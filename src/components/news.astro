---
import type { ImageMetadata } from "astro";
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
const startpage = await getEntry("startpage", "index");
const props = Astro.props;
---

<section class="mx-auto mb-20 mt-20 h-full max-w-screen-xl">
  <div class="">
    {
      startpage.data.news.map(({ title, text }) => {
    
        return (
        <h1 class="max-w-full mb-8 rounded-md border border-neutral-700 p-3 text-3xl bg-yellow-100">Nyheter</h1>
          <div class="mb-12 flex max-w-72 flex-col justify-between rounded-md border border-neutral-700 bg-yellow-100">
            <div>
              <h2 class="px-3 pt-3 text-2xl font-semibold">{title}</h2>
              <p class="px-3 pt-3 font-semibold">{text}</p>
            </div>
          </div>
        );
      })
    }
  </div>
</section>
