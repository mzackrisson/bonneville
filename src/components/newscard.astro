---
import type { ImageMetadata } from "astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const news = await getCollection("news");
---

<section class="grid">
  <h1
    class="mt-10 h-16 w-full rounded-md border border-slate-900 bg-yellow-100 p-3 text-center text-3xl">
    Nyheter
  </h1>
  <div class="flex gap-4">
    {
      news.map((entry) => (
        <div class="my-10 flex max-w-72 flex-col rounded-md border border-neutral-700 bg-yellow-100">
          <h2 class="p-3 text-2xl font-semibold">{entry.data.pubDate}</h2>
          <p class="p-3">{entry.data.text}</p>
        </div>
      ))
    }
  </div>
  <a
    href="/nyheter"
    class="mx-auto my-2 max-w-max rounded-md border border-slate-900 bg-yellow-100 p-3 font-semibold"
    >Alla nyheter</a
  >
</section>
