---
import type { ImageMetadata } from "astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

const news = await getCollection("news");
const slicednews = news.slice(0, 8);
---

<section class="grid">
  <h1 class="w-max-w my-10 h-16 text-center text-5xl">Nyheter</h1>
  <div
    class="flex flex-col flex-wrap items-center justify-evenly gap-6 md:flex-row lg:justify-start">
    {
      slicednews.map((entry) => (
        <div class="flex max-w-72 flex-col rounded-md border border-neutral-700 bg-yellow-100">
          <h2 class="p-3 text-center text-2xl font-semibold">
            {entry.data.pubDate}
          </h2>
          <p class="px-3 pb-2 text-center">
            {entry.data.text.slice(0, 65).concat("...")}
          </p>
        </div>
      ))
    }
  </div>
  <a
    href="/nyheter"
    class="mx-auto my-5 max-w-max rounded-md border border-slate-900 bg-zinc-300 p-3 font-semibold hover:animate-wiggle"
    >Alla nyheter</a
  >
</section>
