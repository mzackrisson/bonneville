---
import { Picture } from "astro:assets";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import type { ImageMetadata } from "astro";
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import Titleandtext from "./titleandtext.astro";

const startpage = await getEntry("startpage", "index");
---

<div class="justify-content flex w-full items-center">
  {
    startpage.data.heroimage.map(async ({ title, text, image }) => {
      const img = (await import(image)).default as ImageMetadata;
      return (
        <div class="relative flex w-full flex-col">
          <Image
            class="w-full object-cover md:h-96"
            src={img}
            alt={`Bild pÃ¥ ${title}`}
          />
          <div class="absolute top-0 flex h-full w-full flex-col items-center justify-center bg-gray-400 bg-opacity-50 text-3xl xl:top-0">
            <h2 class="mx-10 my-10 text-center text-5xl font-semibold md:text-7xl">
              {" "}
              {title}{" "}
            </h2>
            <p class="mx-10 my-10 hidden w-2/3 text-center text-3xl lg:block">
              {" "}
              {text}{" "}
            </p>
          </div>
        </div>
      );
    })
  }
</div>
