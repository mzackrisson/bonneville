---
import type { ImageMetadata } from "astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const members = await getCollection("members");
---

<section class="flex h-80 flex-wrap justify-center gap-16 pt-14">
  {
    members.map(async ({ data: { name, title, image, description } }) => {
      const img = (await import(image)).default as ImageMetadata;
      return (
        <div class="h-full w-full lg:h-60 lg:w-96">
          <Image src={img} alt={`Bild pÃ¥ ${name}`} />
          <h2 class="mt-1p-6 text-3xl font-semibold leading-snug tracking-tight">
            {name}
          </h2>
          <p class="text-gray pb-4">{title}</p>
          <p class="p-6 text-black">{description}</p>
        </div>
      );
    })
  }
</section>
